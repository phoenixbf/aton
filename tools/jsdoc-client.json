{
    "plugins": [
        "plugins/markdown"
    ],
    "recurseDepth": 10,
    "source": {
        "include": ["./public/src/"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "referenceTitle": "ATON 3.0 API",
        "systemName": "ATON 3.0 API",
        "cleverLinks": false,
        "monospaceLinks": false,
        "systemLogo": "./public/res/logo-inv-40x40.png",
        "systemSummary": "ATON is a framework by CNR ISPC to create Web3D/WebXR apps (presenters, applied games, tools, etc.) interacting with CH objects and 3D scenes on the Web. It adopts a 'develop once, deploy everywhere' approach, without requiring any installation for final users, with its front-end automatically adapting to the device (mobile, desktop/kiosk or immersive VR).",
        "search": true,
        "outputSourceFiles": false,
        "outputSourcePath": false
    },

    "docdash": {
        "search": true,
        "collapse": true,
        "_commonNav": true,
        "scripts": ["../../res/css/docdash.css"],
        "menu": {
            "Official Website": {
                "href":"http://osiris.itabc.cnr.it/aton",
                "target":"_blank",
                "class":"menu-item",
                "id":"website_link"
            },
            "GitHub": {
                "href":"https://github.com/phoenixbf/aton",
                "target":"_blank",
                "class":"menu-item",
                "id":"github"
            }
        },
        "meta": {
            "title": "ATON API",
            "description": "ATON framework (CNR ISPC) API for developers",
            "keyword": "Web3D WebXR nodejs cultural heritage 3D"
        }
    },

    "opts": {
        "destination": "./public/apidoc/client/",
        "_template": "_prv/clean-jsdoc-theme",
        "template": "_prv/docdash",
        "recurse": true,
        "verbose": true,
        "encoding": "utf8",
        "readme": "./tools/API.md",

        "_theme_opts": {
            "theme__": "dark",
            "title": "<div style='text-align:center'><img src='/res/aton-logo.png' style='width:100px;height:auto'><br>ATON 3.0 API</div>",
            "footer": "ATON 3.0 API",

            "_include_css": ["./public/res/css/apidoc.css"],

            "menu":[
                {
                    "title": "Official website",
                    "link": "http://osiris.itabc.cnr.it/aton",
                    "target": "_blank"
                },
                {
                    "title": "GitHub",
                    "link": "https://github.com/phoenixbf/aton",
                    "target": "_blank"
                }
            ],
            "menuLocation": "up"
        }
    }
}